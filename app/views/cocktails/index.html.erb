<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "#", class: "navbar-brand disabled" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
            <%= link_to "Add cocktail", new_cocktail_path, id: "sub-btn", class: "btn btn-outline-success my-2 my-sm-0 rounded-pill" %>
          </div>
        <% end %>
    </div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&auto=format&fit=crop&w=1649&q=80);">
  <div class="container">
    <h1>Cocktails</h1>
  </div>
</div>
<div class="card-list">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo.key %>')">
          <%= cocktail.name %>
          <%= link_to "Check out", cocktail_path(cocktail), class: "see-more" %>
          <%= link_to cocktail_path(cocktail),
                                method: :delete do %><i class="far fa-trash-alt"></i><% end %>
        </div>
    <% end %>
  </div>
</div>
