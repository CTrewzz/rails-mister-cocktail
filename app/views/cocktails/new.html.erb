 <div class="form-wrap">
  <div class="form-cocktail">
    <%= simple_form_for [@cocktail] do |f| %>
    <div class="form-group">
      <h3>What is the name</h3>
      <%= f.input :name, label: false, class: "form-control" %>
    </div>
    <div class="form-group">
      <h3>And a link please</h3>
      <%= f.input :img_url, label: false, class: "form-control" %>
    </div>
    <%= f.submit "Create a cocktail", id: "btn-create", class: "btn btn-outline-success rounded-pill" %>
    <% end %>
  </div>
  <div class="btn-back">
    <h2><%= link_to "Back", cocktails_path %></h2>
  </div>
</div>
